{
    "name": "eslint-config",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/eslint-config/src",
    "prefix": "bynaryde",
    "tags": [],
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "outputs": [
                "{workspaceRoot}/dist/{projectRoot}"
            ],
            "options": {
                "project": "libs/eslint-config/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/eslint-config/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/eslint-config/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/eslint-config/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/eslint-config/**/*.ts",
                    "libs/eslint-config/**/*.html",
                    "libs/eslint-config/package.json",
                    "libs/eslint-config/recommended/**/*.ts",
                    "libs/eslint-config/recommended/**/*.html",
                    "libs/eslint-config/base/**/*.ts",
                    "libs/eslint-config/base/**/*.html"
                ]
            }
        }
    }
}
